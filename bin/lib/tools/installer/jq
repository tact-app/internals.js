#!/usr/bin/env bash

@install-jq() {
  local force=false version=1.6

  local arg skip=false
  for arg in "${@}"; do
    if $skip; then
      skip=false
      continue
    fi
    case "${arg}" in
    -f | --force)
      force=true
      shift
      ;;
    --version)
      version="${2}"
      shift 2
      skip=true
      ;;
    esac
  done

  if command -v jq >/dev/null && [[ ! $force ]]; then
    [[ $(jq --version | cut -d '-' -f 2) == "${version}" ]] && return
  fi

  local file src=https://github.com/jqlang/jq/releases/download
  case $(@os) in
  linux) file=jq-linux64 ;;
  darwin) file=jq-osx-amd64 ;;
  *) @fatal there is no supported binary ;;
  esac

  local path=${1}
  curl -sSfL "${src}/jq-${version}/${file}" -o "${path}/jq"
  chmod +x "${path}/jq"
}
